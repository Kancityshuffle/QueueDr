<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, placeholder: 'Name', label: false %>
  <br>
  <%= f.input :tel, placeholder: 'Your telephone number', label: false %>
 	<br> 
  <%= f.select :insurance_provider_id, [['Anthem Blue Cross'],['Blue Shield of California'],['Cigna'],['Health Net'],['Kaiser Permanente of CA'],['Delta Dental'],['Humana'],['IHC Group'],['Nationwide Life Insurance Company'],['Security Life Insurance Company of America'],['United Concordia Dental'],['UnitedHealthOne'],['Chinese Community Health Plan'],['Sharp Health Plan'],['Western Health Advantage']]%>
 
 
  

  <div class="form-actions">
  <%= f.submit "Get an appointment", class: "btn btn-large btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
